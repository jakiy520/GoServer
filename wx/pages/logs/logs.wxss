.log-list {
  display: flex;
  flex-direction: column;
  /* padding: 10rpx; */
  background-color: antiquewhite;
}

.log-item {
  margin-bottom: 5rpx;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
  color: darkgreen;
  padding: 20rpx;
}

.log-item-info {
  margin-left: 20rpx;
}

.log-item text {
  margin: 0 15rpx 0 15rpx;
}

.nickname {
  color: red;
}

.price {
  color: red;
}

.datetime {
  width: 160rpx;
  font-size: 28rpx;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  border-radius: 50%;
}
